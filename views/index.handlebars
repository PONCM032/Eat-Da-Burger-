<div id="bkgImage">
<br>
  <div "uk-navbar-container">
    <h1>Welcome to Bembos</h1>
  </div>
<img src="../assets/Images/Bembos.png" id="logo">
<br>
  <h2>Please place an order</h2>

  <div class="uk-column-1-2">
    <h2>Coming up!</h2>
    <ul>
      {{#each burger}}
      {{#unless action}}
      {{> burger/action-block action=true name=name}}
      {{/unless}}
      {{/each}}
    </ul>
    <br>
    <h2>Already Eaten!</h2>
    <ul>
      {{#each burger}}
      {{#if action}}
      {{> burger/action-block action=false}}
      {{/if}}
      {{/each}}
    </ul>

  </div>
  <h2>Add an Order</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Order:</label>
      <input class="uk-input" type="text" placeholder="Hamburguesa Bembos" id="ca" name="name">
    </div>
    <br>
    <button class="uk-button uk-button-primary" type="submit">Submit</button>
  </form>
</div>